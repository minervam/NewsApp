<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_padding">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:contentDescription="@string/news_image"
        android:cropToPadding="false"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/list_marginLeft"
        android:layout_marginStart="@dimen/list_marginRight"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_padding"
            android:background="@color/news_list_textBackground"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/news_list_sectionText"
            android:textSize="@dimen/section_textSize"
            tools:text="Business" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/list_marginRight"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/news_list_titleText"
            android:textSize="@dimen/title_textSize"
            tools:text="Long placeholder location that should wrap to more than 2 lines of text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/list_marginTop"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contributor"
                style="@style/OtherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="William Tell" />

            <TextView
                android:id="@+id/date"
                style="@style/OtherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_marginRight"
                android:layout_weight="0"
                tools:text="Mar 6, 2010" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
